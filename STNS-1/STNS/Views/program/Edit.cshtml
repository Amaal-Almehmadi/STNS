@model STNS.Models.Program

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h2 style="text-align:center">تعديل البرنامج</h2>

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Program_Id)

        <div class="container">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-6" style="text-align:right">
                        @Html.EditorFor(model => model.Program_Age_ByMonth, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Program_Age_ByMonth, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2" style="text-align:right">
                        <span class="head">العمـر بالأشهر</span>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-6" style="text-align:right">
                        @Html.EditorFor(model => model.Program_Age_ByYear, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Program_Age_ByYear, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2" style="text-align:right">
                        <span class="head">العمـر بالسنة</span>


                    </div>
                </div>

            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-6" style="text-align:right">
                        @Html.EditorFor(model => model.Program_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Program_Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2" style="text-align:right">
                        <span class="head">اسم البرنـامج</span>
                    </div>


                </div>
            </div>


            <div class="form-group">
                <div class="col-md-4 col-md-offset-6" style="text-align:right">
                    <input type="submit" value="حفظ" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("عودة للقائمة", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
