@model STNS.Models.Event
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_layout.cshtml";
}<h2 style="text-align:center">تعديل النشاط </h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Event_Number)

        <div class="form-group">
            <span class="head">  <label>رقم الفعالية</label></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Event_Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Event_Number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="head">  <label>موضوع الفعالية </label></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Event_Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Event_Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <span class="head">  <label>وصف الفعالية </label></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Event_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Event_Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <span class="head">  <label>تاريخ بداية الفعالية </label></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DOE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DOE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("عودة الى القائمة", "Index")
</div>
