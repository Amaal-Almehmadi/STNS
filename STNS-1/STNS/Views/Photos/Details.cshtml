@model  STNS.Models.Photo

@{
    ViewBag.Title = "Details";
}


<h2 style="text-align:center">تفاصيل بيانات الصورة</h2>



<hr />
<div class="dl-horizontal">
    <div class="row">

        <div class="col-md-10">
            @Html.DisplayFor(model => model.Album.AlbumTitle)

        </div>

        <div class="col-md-2">

            <span class="head">اسم الألبوم</span>

        </div>

    </div>

    <div class="row">

        <div class="col-md-10">
            @Html.DisplayFor(model => model.PhotoTitle)

        </div>

        <div class="col-md-2">

            <span class="head">اسم الصورة</span>

        </div>

    </div>


    <div class="row">

        <div class="col-md-10">
            @Html.DisplayFor(model => model.photoDate)
        </div>

        <div class="col-md-2">

            <span class="head">تاريخ الصورة</span>
        </div>

    </div>

    <div class="row">

        <div class="col-md-10">
            <img src="~/Files?id=@Model.UserPhoto.FileId" style="max-height:250px" ; />
        </div>

        <div class="col-md-2">

            <span class="head">الصورة</span>

        </div>

    </div>




</div>

<p>
    @Html.ActionLink("تعديل", "Edit", new { id = Model.PhotoId }) |
    @Html.ActionLink("عودة للقائمة", "Index")
</p>
