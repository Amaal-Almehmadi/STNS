@model STNS.Models.Delegation
@{
    ViewBag.Title = "delegation";
}

<h2 style="text-align:center">تفويــض</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ActionLink("طباعة", "print")
    <div class="form-horizontal">


        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container">
            <div class="row">

                <div class="col-md-3" style="text-align:right">
                    @Html.EditorFor(model => model.child_Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.child_Id, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3" style="text-align:right">
                    <span class="head"> السجل المدني للطفل</span>
                </div>





                <div class="col-md-3" style="text-align:right">
                    @Html.EditorFor(model => model.Parent_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Parent_id, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3" style="text-align:right">
                    <span class="head">  السجل المدني للأم</span>
                </div>

            </div>
            <br />

            <div class="row">

                <div class="col-md-3" style="text-align:right">
                    @Html.EditorFor(model => model.Delegated_person_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Delegated_person_Name, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3" style="text-align:right">
                    <span class="head">    اسم الشخص المفوض</span>
                </div>






                <div class="col-md-3" style="text-align:right">
                    @Html.EditorFor(model => model.Delegated_person_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Delegated_person_id, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3" style="text-align:right">
                    <span class="head">   السجل المدني للشخص المراد تفويضه</span>
                </div>


            </div>

            <div class="row">

                <div class="col-md-3" style="text-align:right">
                    @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3" style="text-align:right">
                    <span class="head">  سبب التفويض</span>
                </div>





                <div class="col-md-3" style="text-align:right">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3" style="text-align:right">
                    <span class="head">  التاريخ</span>
                </div>

            </div>

            <br />
            <div class="row">

                <div class="form-group">
                    <div class="col-md-4 col-md-offset-6" style="text-align:center">
                        <input type="submit" value="إضافة تفويض " class="btn btn-default" />
                    </div>
                </div>

            </div>


        </div>
    </div>
}

<div>
    @Html.ActionLink("العودة للقائـمة", "Index")
</div>