@model STNS.Models.Album

@{
    ViewBag.Title = "Edit";
}


<h2 style="text-align:center">تعديل الألبـوم</h2>


@using (Html.BeginForm("Edit", "Albums", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AlbumId)
        <div class="container">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 col-md-offset-6" style="text-align:right">
                        @Html.EditorFor(model => model.AlbumTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AlbumTitle, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-2" style="text-align:right">
                        <span class="head">اسم الألبـوم</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 col-md-offset-6" style="text-align:right">
                        <img src="~/Files?id=@Model.Photo.FileId" style="max-width:400px;" /> <br /><!-- to show the exitst img-->
                        <input type="file" id="upload" name="upload" />
                    </div>
                    <div class="col-md-2" style="text-align:right">
                        <span class="head">صورة غلاف الألبـوم</span>

                    </div>
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    <div class="col-md-10">

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 col-md-offset-6" style="text-align:right">
                    <input type="submit" value="حفظ" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("عودة للقائمة", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

