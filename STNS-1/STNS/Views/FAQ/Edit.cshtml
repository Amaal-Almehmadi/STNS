@model STNS.Models.FAQ

@{
    ViewBag.Title = "تعديل سؤال";
    Layout = "~/Views/Shared/_layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2  style="text-align:center">تعديل سؤال</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FAQ_Number)

        <div class="form-group">
            <span style="head">  <label>السؤال </label></span> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.FAQ_Question, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FAQ_Question, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span style="head">  <label>الإجابة</label></span> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.FAQ_Answer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FAQ_Answer, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("عودة الى القائمة", "Index")
</div>
