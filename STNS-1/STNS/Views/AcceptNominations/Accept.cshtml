                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Child_Id, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head">هوية الطفل</span>
                    </div>
                </div>
           
 
                <div class="row">
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Child_Fullname, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head">اسم الطفل الثلاثي</span>
                    </div>
              
             
         
            
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Child_Gender, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head">جنس الطفل</span>
                    </div>
                </div>
             

           
                <div class="row">
