                    <div class="col-md-3" style="text-align:right">
                        <span class="head"> هوية الأم</span>
                    </div>
           
                    <div class="col-md-3" style="text-align:right">
                       @Html.EditorFor(model => model.Mother_Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mother_Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head"> رقم جوال الأم</span>
                    </div>
                </div>
            

           
                <div class="row">
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Mother_Email, new { htmlAttributes = new { @class = "form-control" } })
