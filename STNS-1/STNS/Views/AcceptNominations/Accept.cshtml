                    <div class="col-md-3" style="text-align:right">
                        <span class="head"> إيميل الأم</span>
                    </div>
             
               
                <div class="col-md-3" style="padding-top:10px;">
                    @Html.DropDownListFor(model => model.branch, new List<SelectListItem> {
    new SelectListItem(){ Text = "الفرع الرئيسي", Value = "الفرع الرئيسي" },
new SelectListItem() { Value = "السلام",Text = "السلام"  },
new SelectListItem() { Value = "العلوم",Text = "العلوم"  },
            new SelectListItem() { Value = "التربية",Text = "التربية" }
        }
    , new { @class = "form-control", @placeholder = "--اختاري احد الفروع--" }) 
                </div><div class="control-label col-md-3"><p><span class="head">الفرع </span> </p> </div>
            </div>

           
                <div class="row">
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Start_date, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head"> بداية</span>
                    </div>
               
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Other, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head"> تاريخ البداية</span>
                    </div>
                </div>
            


            <div class="form-group">
                <div class="col-md-4 col-md-offset-6" style="text-align:right">
                    <input type="submit" value="حفظ" class="btn btn-default" />
                </div>
            </div>

           
        </div> </div>
}

<div>
    @Html.ActionLink("العودة للقائمـة", "Index")
</div>
<script src="~/Content/scripts/jquery.js"></script>
<script>
    $(document).ready(function () {
        $('#branch').live('change', function (e) {



            $.ajax({
                url: '/AcceptNominations/ActionMethordNam/' + e.target.options[e.target.selectedIndex].text,
                type: 'GET',
                success: function (response) {
                    alert(response);
                },
                error: function (error) {
                    $(this).remove();
                    DisplayError(error.statusText);
                }
            });
        });



    });
</script>