                    <div class="col-md-3" style="text-align:right">
                        <span class="head">تاريخ الميلاد</span>
                    </div>
     
 
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Monthly_Age, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head">عمر الطفل بالأشهر</span>
                    </div>
                </div>
            
        <br />
         
                <div class="row">
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Years_Age, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head">عمر الطفل بالسنة</span>
                    </div>
              
 
                
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Child_Nationality, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head">جنسية الطفل</span>
                    </div>
                </div>
            

           
                <div class="row">
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Mother_Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head">اسم الأم</span>
                    </div>
             
                
                    <div class="col-md-3" style="text-align:right">
                        @Html.EditorFor(model => model.Mother_Nationality, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="col-md-3" style="text-align:right">
                        <span class="head">جنسية الأم</span>
