@model STNS.Models.Teacher

@{
    ViewBag.Title = "Create";
}

<h2 style="text-align:center">اضافة معلمة</h2>


@using (Html.BeginForm("Create", "Teacher"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-6" style="text-align:center">
                        @Html.EditorFor(model => model.Teacher_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Teacher_Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2" style="text-align:center">
                        <span class="head"> اسم المعلمـة</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-6" style="text-align:center">
                        @Html.EditorFor(model => model.Teacher_National_Id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Teacher_National_Id, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2" style="text-align:center">
                        <span class="head">    رقم الهوية الوطنية</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-6" style="text-align:center">
                        @Html.EditorFor(model => model.Teacher_Nationality, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Teacher_Nationality, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2" style="text-align:right">
                        <span class="head">   الجنسية</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-6" style="text-align:center">
                        @Html.EditorFor(model => model.Teacher_password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Teacher_password, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2" style="text-align:center">
                        <span class="head">الرقم السري</span>
                    </div>

                </div>

            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-6" style="text-align:center">
                        @Html.EditorFor(model => model.Teacher_Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Teacher_Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2" style="text-align:center">
                        <span class="head">  اسم المستخدم</span>
                    </div>

                </div>

            </div>



        </div>
    </div>


    <div class="form-actions no-color">
        <input type="submit" value="إضافة" class="btn btn-default" /> |
        @Html.ActionLink("العودة للقائمة", "Index")
    </div>

}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
