@model STNS.Models.Useful_Links
@{
    ViewBag.Title = "تعديل رابط";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
'<h2>تعديل رابط</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
     
        <hr />
        @Html.HiddenFor(x=>x.Link_Number)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="head"> <label>الموضوع</label></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Link_Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Link_Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="head">  <label>الرابط</label></span> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.Link_href, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Link_href, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="اضافة" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("عودة الى القائمة", "Index")
</div>
